<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/header') %>
    <title>Nuevo usuario</title>
</head>
<body>
    <%- include('partials/navigation') %>
    <div id="alertaBootstrap"></div>
    <div class="container p-4 col-md-5 mt-5">
        <form method="POST" action="/new-entry" class="card card-body shadow" id="formNuevoUsuario">
            <div class="form-group">
                <label for="nombre"> Nombre </label>
                <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Ingresa un Nombre" autofocus required>
            </div>
            <div class="form-group  mt-3">
                <label for="email"> Email </label>
                <input class="form-control" type="email" name="email" id="email" placeholder="Ingresa un Correo" autofocus required>
            </div>

            <div class="form-group  mt-3">
                <label for="telefono"> Telefono </label>
                <input class="form-control" type="tel" name="telefono" id="telefono" placeholder="Ingresa un Telefono" autofocus required>
            </div>
            <div class="d-flex justify-content-center">
                <input type="submit" value="Guardar Usuario" class="btn btn-success mt-3 col-md-4">
            </div>
        </form>
    </div>
    <script src="/validacion.js"></script>
</body>
</html>