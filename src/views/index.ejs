<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/header') %>
    <title>Usuarios</title>
  </head>
  <body>
    <%- include('partials/navigation') %>
    <div class="container">
      <div class="mt-3 border-bottom d-flex justify-content-around">
        <h3>Lista de usuarios</h3>
      </div>
      <div class="container border mb-2">
        <div
          class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3 mt-1 mb-3"
        >
          <% usuarios.forEach(function (usuario) { %>
          <div class="col">
            <div class="card shadow h-100">
              <div class="card-header">
                <strong><%= usuario.nombre %> </strong>
              </div>
              <div class="card-body">
                <p>Correo electronico: <%= usuario.email %></p>
                <p>Telefono: <%= usuario.telefono %></p>
              </div>
              <div class="card-footer d-flex justify-content-around">
                <a href="/update/<%= usuario.id %>" class="btn btn-warning"
                  >Actualizar</a
                >
                <a href="/delete/<%= usuario.id %>" class="btn btn-danger"
                  >Borrar</a
                >
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        <div class="d-flex justify-content-center mt-3">
          <nav aria-label="PaginaciÃ³n de usuarios">
            <ul class="pagination">
              <% for (let i = 1; i <= totalPaginas; i++) { %>
              <li class="page-item <%= i === paginaActual ? 'active' : '' %>">
                <a class="page-link" href="/?page=<%= i %>"><%= i %></a>
              </li>
              <% } %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="/alerta.js"></script>
  </body>
</html>
