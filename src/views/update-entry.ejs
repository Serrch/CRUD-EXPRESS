<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/header') %>
    <title>Actualizar usuario</title>
</head>
<body>
    <%- include('partials/navigation') %>
    <div id="alertaBootstrap"></div>
    <div class="container p-4 col-md-5 mt-5">
        <form method="POST" action="/update/<%= usuario.id %>" class="card card-body shadow" id="formNuevoUsuario">
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input class="form-control" type="text" name="nombre" id="nombre" value="<%= usuario.nombre %>" required>
            </div>
            <div class="form-group mt-3">
                <label for="email">Email</label>
                <input class="form-control" type="email" name="email" id="email" value="<%= usuario.email %>" required>
            </div>
            <div class="form-group mt-3">
                <label for="telefono">Tel√©fono</label>
                <input class="form-control" type="tel" name="telefono" id="telefono" value="<%= usuario.telefono %>" required>
            </div>
            <div class="d-flex justify-content-center">
                <input type="submit" value="Actualizar Usuario" class="btn btn-warning mt-3 col-md-4">
            </div>
        </form>
    </div>
    <script src="/validacion.js"></script>
</body>
</html>
